{
    "compilerOptions": {
        "outDir": "./dist/",
        "baseUrl": "./",
        "paths": {
            "@/*" : ["src/*"]
        },
        "jsx": "react",
        "sourceMap": true,
        "allowJs": true,
        "target": "es5",
        "module": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node"
    },
    "include" : [
        "src/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}

